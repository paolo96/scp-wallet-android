<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scp.wallet">

    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".ScpWalletApp"
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScPrimeWallet"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.scan.ScanActivity"
            android:exported="false" />
        <activity
            android:name=".activities.settings.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.exportseed.ExportSeedActivity"
            android:exported="false" />
        <activity
            android:name=".activities.walletsettings.WalletSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.createwallet.CreateWalletActivity"
            android:exported="false" />
        <activity
            android:name=".activities.importwallet.ImportWalletActivity"
            android:exported="false" />
        <activity
            android:name=".activities.newwallet.NewWalletActivity"
            android:exported="false" />
        <activity
            android:name=".activities.receive.ReceiveActivity"
            android:exported="false" />
        <activity
            android:name=".activities.send.SendActivity"
            android:exported="false" />
        <activity
            android:name=".activities.wallets.WalletsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.launch.LaunchActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>